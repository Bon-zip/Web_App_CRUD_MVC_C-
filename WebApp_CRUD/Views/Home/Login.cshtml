@model WebApp_CRUD.Models.ViewModels.LoginViewModel
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Home</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Login</a></li>
    </ol>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Login</h1>
        <form asp-area="Admin" asp-action="Login" enctype="multipart/form-data" method="post">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7 container">
                    <div class="form-item">
                        <label asp-for="UserName" class="form-label my-3">UserName<sup>*</sup></label>
                        <input asp-for="UserName" type="text" class="form-control" placeholder="UserName....">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="Password" class="form-label my-3">Password <sup>*</sup></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password....">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                   @*  <div class="form-check m-2">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="form2Example31" />
                        <label asp-for="RememberMe" class="form-check-label" for="form2Example31"> Remember me </label>
                    </div> *@
                    <div class="mt-3">
                        <button asp-area="" asp-action="Register" asp-controller="Home" class="mb-0 text-muted">Bạn chưa có tài khoản !! <span class="fas fa-chevron-right ms-1"></span> Đăng ký</button>
                    </div>
                    <div class="form-item text-center m-3">
                        <button asp-area="" type="submit" class="btn btn-primary" style="width: 300px; margin-top: 30px; margin-bottom: 50px;">
                            Login
                        </button>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
